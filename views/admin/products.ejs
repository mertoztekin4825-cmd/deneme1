<section class="admin">
  <h1>Ürün Yönetimi</h1>
  <div class="admin-grid">
    <form action="/admin/product/create" method="post" enctype="multipart/form-data" class="form-card">
      <input type="hidden" name="_csrf" value="<%= csrfToken %>">
      <h2>Yeni Ürün</h2>
      <label>Ad
        <input type="text" name="name" required>
      </label>
      <label>Slug
        <input type="text" name="slug" placeholder="otomatik">
      </label>
      <label>Kategori
        <select name="category_id" required>
          <% categories.forEach(function(category) { %>
            <option value="<%= category.id %>"><%= category.name %></option>
          <% }) %>
        </select>
      </label>
      <label>Fiyat
        <input type="number" step="0.01" name="price" required>
      </label>
      <label>Birim
        <input type="text" name="unit" value="kg" required>
      </label>
      <label>Stok
        <input type="number" name="stock" min="0" required>
      </label>
      <label>Görsel
        <input type="file" name="image" accept="image/*">
      </label>
      <label>Açıklama
        <textarea name="description" rows="3"></textarea>
      </label>
      <button type="submit" class="btn-primary">Kaydet</button>
    </form>
    <div class="table-wrapper">
      <table>
        <thead>
          <tr>
            <th>Ürün</th>
            <th>Kategori</th>
            <th>Fiyat</th>
            <th>Stok</th>
            <th>İşlemler</th>
          </tr>
        </thead>
        <tbody>
          <% products.forEach(function(product) { %>
            <tr>
              <td>
                <strong><%= product.name %></strong><br>
                <small><%= product.slug %></small>
              </td>
              <td><%= product.category_name %></td>
              <td><%= formatCurrency(product.price) %></td>
              <td><%= product.stock %></td>
              <td>
                <details>
                  <summary>Düzenle</summary>
                  <form action="/admin/product/update" method="post" enctype="multipart/form-data">
                    <input type="hidden" name="_csrf" value="<%= csrfToken %>">
                    <input type="hidden" name="id" value="<%= product.id %>">
                    <label>Ad
                      <input type="text" name="name" value="<%= product.name %>" required>
                    </label>
                    <label>Slug
                      <input type="text" name="slug" value="<%= product.slug %>">
                    </label>
                    <label>Kategori
                      <select name="category_id" required>
                        <% categories.forEach(function(category) { %>
                          <option value="<%= category.id %>" <%= category.id === product.category_id ? 'selected' : '' %>><%= category.name %></option>
                        <% }) %>
                      </select>
                    </label>
                    <label>Fiyat
                      <input type="number" step="0.01" name="price" value="<%= product.price %>" required>
                    </label>
                    <label>Birim
                      <input type="text" name="unit" value="<%= product.unit %>" required>
                    </label>
                    <label>Stok
                      <input type="number" name="stock" min="0" value="<%= product.stock %>" required>
                    </label>
                    <label>Görsel (opsiyonel)
                      <input type="file" name="image" accept="image/*">
                    </label>
                    <label>Açıklama
                      <textarea name="description" rows="3"><%= product.description %></textarea>
                    </label>
                    <button type="submit">Güncelle</button>
                  </form>
                  <form action="/admin/product/delete" method="post" class="inline-form">
                    <input type="hidden" name="_csrf" value="<%= csrfToken %>">
                    <input type="hidden" name="id" value="<%= product.id %>">
                    <button type="submit" class="btn-link">Sil</button>
                  </form>
                </details>
              </td>
            </tr>
          <% }) %>
        </tbody>
      </table>
    </div>
  </div>
</section>
